#Install nextflow without sudo permission
mkdir ~/software
wget -qO- https://get.nextflow.io | bash
mv nextflow ~/software
chmod +x ~/software/nextflow
nano ~/.bashrc
export PATH="$HOME/software:$PATH"
source ~/.bashrc
nextflow -v

